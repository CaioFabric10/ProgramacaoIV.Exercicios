<Window x:Class="ProgramacaoIV.Exercicios.Janelas.ExercicioCinco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Exercício 5 - Enum" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" MaxHeight="50"/>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox
            Grid.Row="1"
            x:Name="cmbTipos"
            Margin="8"
            Style="{StaticResource MaterialDesignComboBox}"
            VerticalAlignment="Bottom"
            materialDesign:HintAssist.Hint="Selecione o tipo de usuário"/>

        <Button
            Grid.Row="3"
            x:Name="btnMostrarDescricao"
            Content="Exibir Descrição"
            Margin="3"
            Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
            Click="btnMostrarDescricao_Click"/>
    </Grid>
</Window>
